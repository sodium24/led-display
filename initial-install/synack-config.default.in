{
    "display": {
        "ledRows": 32,
        "ledCols": 64,
        "ledChain": 2,
        "ledParallel": 1,
        "ledPwmBits": 11,
        "ledBrightness": 100,
        "ledScanMode": 1,
        "ledPwmLsbNanoseconds": 130,
        "ledShowRefresh": false,
        "ledRgbSequence": "RGB",
        "ledPixelMapper": "U-mapper",
        "ledRowAddrType": 0,
        "ledMultiplexing": 0
    },
    "settings": {
        "title": "Synack LED Display"
    },
    "fonts": {
        "6x9": {
            "path": "/home/pi/led-display/fonts/6x9.bdf",
            "outline": false
        },
        "7x13": {
            "path": "/home/pi/led-display/fonts/7x13.bdf",
            "outline": false
        }
    },
    "screens": {
        "off": {
            "app": "off"
        },
        "synackDisplay": {
            "app": "imageDisplay",
            "config": {
                "display": [
                    {
                        "type": "image",
                        "filename": "images/srt_64.png",
                        "rect": [0, 0, 64, 64]
                    },
                    {
                        "type": "text",
                        "text": "{ALIAS}",
                        "point": [32, 7],
                        "font": "6x9",
                        "color": [255, 255, 255],
                        "scroll": "auto",
                        "align": "center",
                        "enable": {SHOW_ALIAS}
                    },
                    {
                        "type": "datetime",
                        "format": "%H:%M:%S",
                        "point": [32, 63],
                        "font": "6x9",
                        "color": [255, 255, 255],
                        "scroll": "none",
                        "align": "center",
                        "enable": {SHOW_TIME}
                    }
                ]
            }
        },
        "menu": {
            "app": "menu",
            "config": {
                "title_text": "MENU",
                "title_font": "6x9",
                "title_color": [255, 0, 0],
                "title_height": 9,
                "item_font": "6x9",
                "item_color": [255, 255, 255],
                "item_height": 9,
                "selected_bgcolor": [255, 255, 255],
                "selected_fgcolor": [0, 0, 0],
                "menu": [
                    {
                        "text": "SYNACK",
                        "screen": "synackDisplay"
                    },
                    {
                        "text": "TURN OFF",
                        "screen": "off"
                    }
                ]
            }
        }
    },
    "screenOrder": ["synackDisplay", "menu", "off"]
}
